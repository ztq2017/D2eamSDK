<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_selector</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 自定义不确定圆形进度条 -->
    <style name="wait_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="login_progress_loading" parent="android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/login_progress</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:maxWidth">72dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">72dp</item>
    </style>

    <style name="floating_menu_anim_style_left" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/floating_menu_anim_show_left</item>
        <item name="android:windowExitAnimation">@anim/floating_menu_anim_hide_left</item>
    </style>

    <style name="floating_menu_anim_style_right" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/floating_menu_anim_show_right</item>
        <item name="android:windowExitAnimation">@anim/floating_menu_anim_hide_right</item>
    </style>

</resources>