<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/ll_loginWay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_9453playLogin"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_9453"
            android:text="9453PLAY帳號登入"
            android:textColor="@color/login_way_text_color"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_faceBookLogin"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_fb"
            android:text="FaceBook帳號登入"
            android:textColor="@color/login_way_text_color"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_googleLogin"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_google"
            android:text="Google帳號登入"
            android:textColor="@color/login_way_text_color"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_visitorLogin"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_user"
            android:text="遊客帳號登入"
            android:textColor="@color/login_way_text_gary_color"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/tv_agreeRules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="登入表示同意：會員管理規章"
            android:textColor="#000000"
            android:textStyle="italic" />

    </RelativeLayout>

</RelativeLayout>