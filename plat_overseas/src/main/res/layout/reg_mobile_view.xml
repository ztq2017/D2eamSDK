<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_loginContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_loginAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mainLoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="登入遊戲"
                android:textColor="@color/text_hint_color"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/border" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_regNewAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_mainRegTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="帳號註冊"
                android:textColor="@color/text_color"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/border_active" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_loginContainer"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_areaSelect"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/edt_kuang"
                android:drawableRight="@drawable/icon_down"
                android:padding="10dp"
                android:text="地区"
                android:textColor="@color/login_choose_text_color"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:background="@drawable/edt_kuang"
                android:ems="15"
                android:hint="手機號碼（限数字）"
                android:imeOptions="flagNoExtractUi"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_auth"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_getAuthCode"
                android:background="@drawable/edt_kuang"
                android:hint="随机验证码"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_getAuthCode"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/get_code"
                android:paddingLeft="32dp"
                android:text="取得驗證碼"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/edt_kuang"
                android:hint="输入新密码"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="12"
                android:maxLines="1"
                android:nextFocusForward="@+id/edt_againNewPassword"
                android:paddingLeft="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_againPassword"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/edt_kuang"
                android:hint="再次确认新密码"
                android:inputType="textPassword"
                android:maxLength="12"
                android:paddingLeft="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_sureRegPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_reg"
            android:text="確認註冊"
            android:textColor="@android:color/white" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_agreeRules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="註冊即表示您同意&lt;會員管理規章&gt;"
        android:textColor="#000000"
        android:textStyle="italic" />
</RelativeLayout>